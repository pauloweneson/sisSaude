<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.wps.guiamedico.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="226dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/imagem" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="223dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.82">

        <EditText
            android:id="@+id/tb_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/tb_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_blue_light"
            android:elevation="24dp"
            android:onClick="buttonOnClick"
            android:text="Entrar" />

        <TextView
            android:id="@+id/link_esqueci_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="esqueciOnClick"
            android:layout_marginTop="10dp"
            android:layout_marginStart="70dp"
            android:text="Esqueci a senha"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G" />

            <Button
                android:id="@+id/bt_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <Button
                android:id="@+id/bt_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I" />

        </LinearLayout>

        <TextView
            android:id="@+id/link_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:onClick="linkCadastrarOnClick"
            android:text="Cadastre-se agora"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
